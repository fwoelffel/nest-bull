{
  "name": "nest-bull",
  "version": "0.8.0",
  "description": "Nest - modern, fast, powerful node.js web framework (@bull)",
  "homepage": "https://github.com/fwoelffel/nest-bull",
  "bugs": {
    "url": "https://github.com/fwoelffel/nest-bull/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fwoelffel/nest-bull.git"
  },
  "license": "MIT",
  "author": "Frederic Woelffel <hello@fwoelffel.me>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write **/*.{ts,json}",
    "lint": "tslint -c tslint.json **/*.ts",
    "prepublishOnly": "npm run build",
    "test": "jest --detectOpenHandles --forceExit --coverage",
    "test:e2e": "jest --config=jest-e2e.config.js --detectOpenHandles --forceExit --coverage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "tslint -c tslint.json",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@nestjs/common": "6.3.2",
    "@nestjs/core": "6.3.2",
    "@nestjs/testing": "6.3.2",
    "@types/bull": "3.5.14",
    "@types/jest": "24.0.15",
    "@types/node": "11.13.15",
    "bull": "3.10.0",
    "husky": "2.5.0",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.2",
    "sort-package-json": "1.22.1",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "typescript": "3.5.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0",
    "bull": "^3.3"
  }
}
